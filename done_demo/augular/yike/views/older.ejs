<div ng-if='status==0'>
	<h1>{{msg}}</h1>
</div>
<div class="item" ng-if='status==1'>
	<ul class="posts">
		<ul class='posts large'>
			<li ng-repeat='post in posts'>
				<span href='javascript:;' class='tag' ng-if='post.column.name'>{{post.column.name}}</span>
				<div class='cont'>
					<h3>{{post.title}}</h3>
					<div class='brief'>
						<p ng-class='{only:post.display_style==10001}' ng-if='post.display_style!=10003'>{{post.abstract}}</p>
						<div ng-if='post.display_style!=10001' ng-class='{thumb:post.display_style==10002,gallery:post.display_style==10003}'>
							<img ng-src="{{post.thumbs[0].medium.url}}">
						</div>
					</div>
				</div>
			</li>
		</ul>
	</ul>
</div>