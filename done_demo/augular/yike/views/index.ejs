<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>豆瓣一刻</title>
	<link rel="shortcut icon" href="./favicon.ico" type="image/x-icon">
	<link rel="stylesheet" href="./less/main.css">
</head>
<body ng-app='app'>
	<div class="viewport">
		<!-- 侧边导航 -->
		<div ng-class="{navs:true,collapse:isShow}">
			<dl ng-controller='navs'>
				<dt class="login">
					<div class="avatar">
						<img src="/images/avatar.png" alt="">
					</div>
					<span>登录</span>
				</dt>

				<dd ng-class="{active:$index == index }" ng-repeat='nav in navs'>
					<a href="{{nav.link}}" class="{{nav.icon}}" ng-click='toggle()'>
						<span>{{nav.text}}</span>
					</a>
				</dd>

			</dl>
			<div class="extra">
				<a href="javascript:;" class="icon-image">夜晚</a>
				<a href="javascript:;" class="icon-download">离线</a>
			</div>
		</div>
		<div class="container">
			<!-- 头部 -->
			<div ng-class="{header:true,collapse:isShow}">
				<a href="javascript:;" class="menu icon-menu" ng-click='toggle()'></a>
				<h2>{{title}}</h2>
				<a href="javascript:;" class="search icon-search"></a>
			</div>
			<!-- 主体 -->
			<div ng-class="{body:true,collapse:isShow}">
				<div ng-show='isLoading'>
					<img src="/images/111.gif" alt="">
				</div>
				<div ng-view></div>
			</div>
		</div>
	</div>
</body>
<script src='/js/angular.min.js'></script>
<script src='/js/angular-route.min.js'></script>
<script src='/yike.js'></script>
<script src='/controller.js'></script>
</html>